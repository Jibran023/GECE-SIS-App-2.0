<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/complaintform_backbutton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/back_image_desc"
        app:srcCompat="@drawable/arrow_back_ios_24_black" />

    <!-- Heading Text -->
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Complaint"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/buttons_container"
        android:layout_below="@id/heading"
        android:fillViewport="true"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name EditText -->
            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/orange_border"
                android:hint="Enter Name"
                android:textColor="@color/black"
                android:padding="12dp"
                android:textSize="18sp"
                />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/orange_border"
                android:textColor="@color/black"
                android:hint="Enter Email"
                android:padding="12dp"
                android:textSize="18sp"
                />

            <!-- Mobile EditText -->
            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/orange_border"
                android:hint="Enter Mobile Number"
                android:textColor="@color/black"
                android:padding="12dp"
                android:textSize="18sp"
                />

            <!-- Department EditText -->
            <EditText
                android:id="@+id/editTextDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/orange_border"
                android:hint="Enter Department"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <!-- ID EditText -->
            <EditText
                android:id="@+id/editTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/orange_border"
                android:hint="Enter ID"
                android:textColor="@color/black"
                android:padding="12dp"
                android:textSize="18sp"
                />

            <!-- Date EditText -->
            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/orange_border"
                android:hint="Enter Date"
                android:textColor="@color/black"
                android:padding="12dp"
                android:textSize="18sp"
                />

            <!-- Title EditText -->
            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/orange_border"
                android:textColor="@color/black"
                android:hint="Title"
                android:padding="12dp"
                android:textSize="18sp"
                />

            <!-- Complaint EditText -->
            <EditText
                android:id="@+id/editTextComplaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/orange_border"
                android:hint="Enter your complaint"
                android:gravity="top"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:minLines="10"
                android:scrollbars="vertical"
                android:inputType="textMultiLine" />

        </LinearLayout>
    </ScrollView>

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp"
        >

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="18sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/customlineedit"
            android:layout_marginBottom="25dp"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_orange" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:background="@drawable/customlineedit"
            app:backgroundTint="@color/primary_orange" />
        <!-- Have to change the customlineedit to customlineedit2 -->
    </LinearLayout>

</RelativeLayout>