<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Profile Section -->
    <RelativeLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/orange_shape">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/person"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@id/profile_image"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/username"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/rollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Number:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/email"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/seatno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat Number:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/rollno"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year Admission:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/seatno"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/cohort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cohort:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/year"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <!-- Dashboard Icon -->
    <RelativeLayout
        android:id="@+id/dashboard_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_section"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_home_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dash Board"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <!-- Inbox Icon -->
    <RelativeLayout
        android:id="@+id/inbox_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dashboard_icon"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_inbox_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/unread_counT"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/unread_count_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="230dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <!-- Log Out Item -->
    <RelativeLayout
        android:id="@+id/logout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inbox_icon"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_logout_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/logout_id"
        android:layout_marginVertical="8dp" />

</RelativeLayout>
