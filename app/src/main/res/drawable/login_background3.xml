<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#FFC371"
                android:startColor="#FF5F6D"
                android:type="linear" />
        </shape>
    </item>

<!--    android:endColor="#FFC371"-->
<!--    android:startColor="#FF5F6D"-->

    <!-- Stripes at the bottom -->
    <item android:bottom="0dp" android:right="0dp" android:left="0dp" android:top="700dp">
        <shape>
            <size android:height="30dp" />
            <gradient
                android:startColor="#FFC371"
                android:endColor="#FFC371"
                android:angle="45" />
        </shape>
    </item>

    <!-- Stripe on the left -->
    <item android:top="380dp" android:bottom="0dp" android:left="0dp" android:right="380dp">
        <shape>
            <size android:width="30dp" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="320dp"/>
            <gradient
                android:startColor="#FFC371"
                android:endColor="#FFC371"
                android:angle="45" />
        </shape>
    </item>


    <!-- Stripe on the Right -->
    <item android:top="380dp" android:bottom="0dp" android:left="380dp" android:right="0dp">
        <shape>
            <size android:width="30dp" />
            <corners android:topLeftRadius="320dp" android:topRightRadius="20dp"/>
            <gradient
                android:startColor="#FFC371"
                android:endColor="#FFC371"
                android:angle="45" />
        </shape>
    </item>


</layer-list>



